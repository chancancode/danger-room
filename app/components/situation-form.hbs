<form>
  <fieldset class="form-group" id="modular-count">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">No. of Modular Sets</legend>
      <div class="col-sm-10">
        {{#each this.modularEncounterSets as |set index|}}
          <div class="form-check form-check-inline">
            <Input @id={{concat "modular-count" set.id}} type="radio" name="modular-count" checked={{is-equal this.modularRadioIndex index}} class="form-check-input" {{on "click" (action this.modularChanged index)}} />
            <label class="form-check-label" for={{concat "modular-count" set.id}}>{{set.id}}</label>
          </div>
        {{/each}}
      </div>
    </div>
  </fieldset>
  <fieldset class="form-group" id="difficultyMode">
    <div class="form-group row">
      <legend class="col-form-label col-sm-2 pt-0">Standard/Export Mode</legend>
      <div class="col-sm-10">
        <div class="form-check form-check-inline">
          <Input @id="difficultyModeRandom" type="radio" name="difficultyMode" checked={{is-equal this.difficultyMode "random"}} class="form-check-input" {{on "click" (action this.difficultyModeChanged "random")}} />
          <label class="form-check-label" for="difficultyMode">Random</label>
        </div>
        <div class="form-check form-check-inline">
          <Input @id="difficultyModeStandard" type="radio" name="difficultyMode" checked={{is-equal this.difficultyMode "standard"}} class="form-check-input" {{on "click" (action this.difficultyModeChanged "standard")}} />
          <label class="form-check-label" for="difficultyMode">Standard</label>
        </div>
        <div class="form-check form-check-inline">
          <Input @id="difficultyModeExpert" type="radio" name="difficultyMode" checked={{is-equal this.difficultyMode "expert"}} class="form-check-input" {{on "click" (action this.difficultyModeChanged "expert")}} />
          <label class="form-check-label" for="difficultyMode">Expert</label>
        </div>
      </div>
    </div>
  </fieldset>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="button" class="btn btn-primary" {{on "click" this.generate}}>Generate!</button>
    </div>
  </div>
</form>

{{#if this.state}}
  <div class="card" style="width: 18rem;">
    <div class="card-header">
      {{this.state.villain.name}}
      <p class="card-subtitle mb-2 text-muted">Difficulty Mode: {{this.state.difficultyMode}}</p>
    </div>
    <ul class="list-group list-group-flush">
      {{#each this.state.modularEncounterSets as |set|}}
        <li class="list-group-item">
          <h6 class="card-title">{{set.name}} <span class="text-muted">({{set.pack}})</span></h6>
          <p class="card-subtitle mb-2 text-muted">difficulty {{set.difficulty}}</p>
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}
